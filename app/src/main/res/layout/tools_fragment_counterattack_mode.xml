<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.tools.counterattackmode.ToolsCounterattackModeFragment">

    <TextView
        android:id="@+id/text_title_counterattack_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter-attack Mode"
        app:layout_constraintBottom_toTopOf="@+id/button_close_counterattack_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_close_counterattack_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_counterattack_mode" />

</androidx.constraintlayout.widget.ConstraintLayout>