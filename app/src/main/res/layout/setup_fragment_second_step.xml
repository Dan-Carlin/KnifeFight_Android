<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setup.secondstep.SetupSecondStepFragment">

    <TextView
        android:id="@+id/text_title_second_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Step"
        app:layout_constraintBottom_toTopOf="@+id/button_next_step_setup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_next_step_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Step"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_second_step" />

</androidx.constraintlayout.widget.ConstraintLayout>
