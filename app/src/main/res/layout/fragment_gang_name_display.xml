<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_trait_symbol_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible"
        tools:ignore="ContentDescription" />

    <com.flounderguy.knifefightutilities.util.CustomTextView
        android:id="@+id/text_gang_name_outline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/splatter_kings"
        android:gravity="center"
        android:maxLines="2"
        android:shadowColor="#40000000"
        android:shadowDx="16"
        android:shadowDy="16"
        android:shadowRadius="2"
        android:textSize="40sp"
        android:visibility="invisible"
        app:autoSizeMaxTextSize="40sp"
        app:autoSizeMinTextSize="15sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeJoinStyle="miter"
        app:strokeWidth="8dp"
        tools:text="Gang Name"
        tools:visibility="visible" />

    <com.flounderguy.knifefightutilities.util.CustomTextView
        android:id="@+id/text_gang_name_fill"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/splatter_kings"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="40sp"
        android:visibility="invisible"
        app:autoSizeMaxTextSize="40sp"
        app:autoSizeMinTextSize="15sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white"
        app:strokeJoinStyle="miter"
        app:strokeWidth="1dp"
        tools:text="Gang Name"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_gang_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="(The something ones)"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>